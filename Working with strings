const airline = 'TAP AIR Portugal';

const checkMiddleSeat = function (seat) {
  //B and E are the middle seats
  const s = seat.slice(-1);
  console.log(seat.slice(-1));
  if (s === 'B' || s === 'E') {
    console.log('you got middle seat');
  }
};

